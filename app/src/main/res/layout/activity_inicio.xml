<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Rentacar.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Rentacar.PopupOverlay" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:background="@color/light_yellow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_et_inviRegis"
            style="@style/text_medium_black"
            android:textAlignment="center"
            android:layout_margin="@dimen/btn_p_small"/>
    </LinearLayout>
    <Button
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="@dimen/layout_btn_mb"
        android:text="@string/signIn"
        android:layout_gravity="center"
        style="@style/btn_medium_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:background="@color/light_yellow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_car"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/btn_p_small"
            android:inputType="textNoSuggestions"
            android:hint="@string/label_et_car"
            android:drawableRight="@drawable/ic_search"
            style="@style/et_medium_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_ent"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/btn_p_small"
                android:inputType="textNoSuggestions"
                android:hint="@string/label_et_ent"
                android:drawableRight="@drawable/ic_calendar"
                style="@style/et_medium_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/et_time"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/btn_p_small"
                android:inputType="textNoSuggestions"
                android:hint="@string/label_et_time"
                android:drawableRight="@drawable/ic_access_time"
                style="@style/et_medium_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_dev"
                style="@style/et_medium_light"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/btn_p_small"
                android:drawableRight="@drawable/ic_calendar"
                android:hint="@string/label_et_dev"
                android:inputType="textNoSuggestions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_time2"
                style="@style/et_medium_light"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/btn_p_small"
                android:drawableRight="@drawable/ic_access_time"
                android:hint="@string/label_et_time"
                android:inputType="textNoSuggestions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:id="@+id/layout_signUp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_signUp_et">
            <Button
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_btn_mb"
                android:text="@string/label_et_search"
                android:layout_gravity="center"
                style="@style/btn_medium_light"
                app:layout_constraintBottom_toBottomOf="@id/parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/main_logo"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
