<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Own styles. -->

    <!-- Button -->
    <style name="btn_medium_light">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/bg_btn_medium</item>
        <item name="android:paddingHorizontal">@dimen/btn_p_big</item>
        <item name="android:paddingVertical">@dimen/btn_p_small</item>
    </style>

    <!-- EditText -->
    <style name="et_medium_light">
        <item name="android:background">@drawable/bg_et_medium</item>
        <item name="android:paddingHorizontal">@dimen/et_p_medium</item>
    </style>
    <style name="spn_medium_light">
        <item name="android:background">@drawable/bg_spn_medium</item>
        <item name="android:paddingEnd">@dimen/et_p_medium</item>
    </style>

    <style name="upload_textview_simple">
        <item name="android:background">@drawable/textview_white_border_red_flat_right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!--UPLOAD BUTTON-->
    <style name="upload_button_simple">
        <item name="android:background">@drawable/button_rounded0_flat_left</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:drawableEnd">@drawable/ic_save_alt</item>
    </style>

    <!-- Text -->
    <style name="text_medium_black">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_medium_bold_black">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_medium_bold_lightblack">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_big_black">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_big_bold_black">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_huge_black">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_huge_bold_black">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_medium_gray">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="text_medium_bold_gray">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_big_gray">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="text_big_bold_danger">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_big_bold_gray">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_big_lightGray">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
</resources>