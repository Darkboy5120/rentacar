<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!--  Body -->
    <item android:bottom="@dimen/et_border"
        android:right="@dimen/et_border"
        android:left="@dimen/et_border"
        android:top="@dimen/et_border">
        <shape android:shape="rectangle">
            <padding android:left="8dp"  android:bottom="8dp"
                android:right="8dp" android:top="8dp" />
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:gravity="right"
        android:drawable="@drawable/ic_baseline_keyboard_arrow_up">
    </item>
</layer-list>